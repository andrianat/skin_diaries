<div class="page-header">
  <h1>
    Products
    <a href="/products/new" class="btn btn-lg btn-success">New Product</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "products_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :favorite_eq, "Favorite" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :favorite_eq, "1", checked: ((params[:q] && params[:q][:favorite_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :favorite_eq, "0", checked: ((params[:q] && params[:q][:favorite_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :favorite_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
    <%= f.label :product_name_cont, "Product name contains" %>
    <%= f.text_field :product_name_cont, :class => "form-control", :placeholder => "Product name contains" %>
  </div>

<div class="form-group">
    <%= f.label :use_cont, "Use contains" %>
    <%= f.text_field :use_cont, :class => "form-control", :placeholder => "Use contains" %>
  </div>

<div class="form-group">
    <%= f.label :ingredients_cont, "Ingredients contains" %>
    <%= f.text_field :ingredients_cont, :class => "form-control", :placeholder => "Ingredients contains" %>
  </div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :brands_brandname_cont, "Brand brandname contains" %>
      <%= f.text_field :brands_brandname_cont, :class => "form-control", :placeholder => "Brand brandname contains" %>
    </div>

<div class="form-group">
      <%= f.label :needs_need_type_cont, "Need need_type contains" %>
      <%= f.text_field :needs_need_type_cont, :class => "form-control", :placeholder => "Need need_type contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/products" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#products_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Ingredients</th>
        <th>Use</th>
        <th>Product name</th>
        <th>Favorite</th>
        <th>Actions</th>
      </tr>

      <% @products.each do |product| %>
      <tr>
        <td><%= product.description %></td>
        <td><%= product.ingredients %></td>
        <td><%= product.use %></td>
        <td><%= product.product_name %></td>
        <td><%= product.favorite %></td>
        <td>
          <a href="/products/<%= product.id %>" class="btn btn-primary">Show</a>
          <a href="/products/<%= product.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_product/<%= product.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @products, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
