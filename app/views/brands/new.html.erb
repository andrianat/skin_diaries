<!-- Validation failure messages -->
<% if @brand.errors.any? %>
  <% @brand.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Brand</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_brand" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for brandname -->
      <div class="form-group">
        <label for="brandname" class="control-label">
          Brandname
        </label>

        <input type="text" id="brandname" name="brandname" placeholder="Brandname" class="form-control" value="<%= @brand.brandname %>">
      </div>

      <button class="btn btn-success">
        Create Brand
      </button>
      or
      <a href="/brands">Cancel</a>
    </form>
  </div>
</div>
