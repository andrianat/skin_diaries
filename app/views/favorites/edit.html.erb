<!-- Validation failure messages -->
<% if @favorite.errors.any? %>
  <% @favorite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Favorite #<%= @favorite.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_favorite/<%= @favorite.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      
      

      <!-- Label and input for products_id -->
      <div class="form-group">
        <label for="products_id" class="control-label">
          Products
        </label>

        <%= select_tag(:products_id, options_from_collection_for_select(Product.all, :id, :created_at, @favorite.products_id), :class => "form-control") %>
      </div>

      <!-- Label and input for brands_id -->
      <div class="form-group">
        <label for="brands_id" class="control-label">
          Brands
        </label>

        <%= select_tag(:brands_id, options_from_collection_for_select(Brand.all, :id, :brandname, @favorite.brands_id), :class => "form-control") %>
      </div>

      <!-- Label and input for needs_id -->
      <div class="form-group">
        <label for="needs_id" class="control-label">
          Needs
        </label>

        <%= select_tag(:needs_id, options_from_collection_for_select(Need.all, :id, :need_type, @favorite.needs_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Favorite
      </button>
      or
      <a href="/favorites/<%= @favorite.id %>">Cancel</a>
    </form>
  </div>
</div>
