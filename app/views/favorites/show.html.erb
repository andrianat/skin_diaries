<div class="page-header">
  <h3>Favorite #<%= @favorite.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Users</dt>
      <dd>
        <% if @favorite.user.present? %>
          <a href="/users/<%= @favorite.users_id %>">
            <%= @favorite.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Products</dt>
      <dd>
        <% if @favorite.products.present? %>
          <a href="/products/<%= @favorite.products_id %>">
            <%= @favorite.products.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Brands</dt>
      <dd>
        <% if @favorite.brands.present? %>
          <a href="/brands/<%= @favorite.brands_id %>">
            <%= @favorite.brands.brandname %>
          </a>
        <% end %>
      </dd>

      <dt>Needs</dt>
      <dd>
        <% if @favorite.concerns.present? %>
          <a href="/needs/<%= @favorite.needs_id %>">
            <%= @favorite.concerns.need_type %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/favorites" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @favorite.user %>
        <a href="/favorites/<%= @favorite.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_favorite/<%= @favorite.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
