<div class="page-header">
  <h1>
    Concerns
    <a href="/concerns/new" class="btn btn-lg btn-success">New Concern</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Actions</th>
      </tr>

      <% @concerns.each do |concern| %>
      <tr>
        <td>
          <a href="/concerns/<%= concern.id %>" class="btn btn-primary">Show</a>
          <a href="/concerns/<%= concern.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_concern/<%= concern.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @concerns, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
